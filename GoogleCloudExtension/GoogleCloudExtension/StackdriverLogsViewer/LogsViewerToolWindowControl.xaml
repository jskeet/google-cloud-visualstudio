                        <Style TargetType="{x:Type ComboBoxItem}">
                            <Setter Property="Background" Value="White" />
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
                        

                <ComboBox Name="comboLogID" Width="160" Margin="0, 0,  20, 0" 
