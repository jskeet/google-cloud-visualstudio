                    <ComboBox>

                        <ComboBoxItem>
                            <ComboBoxItem.Template>
                                <ControlTemplate>
                    <!--<Popup IsOpen="{Binding Path=IsPopupOpen}" StaysOpen="False" 
                           Placement="Bottom" PopupAnimation="Slide" >-->
                        <StackPanel Background="White">
                        <Grid  Height="Auto" Width="Auto" DataContext="{Binding Path=DateTimeRangePicker}" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5, 5, 0, 10" >
                                <TextBlock Text ="Start" Margin="0, 0, 6, 0"/>
                                <TextBlock Text="{Binding Path=StartDateTime}" Margin="0, 0, 3, 0" />
                                <TextBlock Text ="End"  Margin="0, 0, 6, 0"/>
                                <TextBlock Text="{Binding Path=EndtDateTime}" Margin="0, 0, 3, 0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="1"  Margin="5, 5, 0, 10">
                                <Button  Content="5 Day" Command="{Binding Path=FiveDayRangeCommand}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="2"  Margin="5, 5, 0, 10" >
                                <TextBlock Text ="Start" Margin="0, 0, 6, 0"/>
                                <DatePicker  Margin="0, 0, 6, 0" SelectedDate="{Binding Path=StartDateTime, Mode=TwoWay}" 
                                             SelectedDateFormat="Short" />

                                <TextBlock Text ="End"  Margin="0, 0, 6, 0"/>
